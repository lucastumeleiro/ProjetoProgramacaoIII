unit login;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.Imaging.jpeg,
  Vcl.StdCtrls, Vcl.Buttons;

type
  TFrnLogin = class(TForm)
    Image1: TImage;
    lb_Usuario: TLabel;
    lb_senha: TLabel;
    edt_usuario: TEdit;
    edt_senha: TEdit;
    btn_login: TSpeedButton;
    procedure efetuarLogin();
    procedure btn_loginClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrnLogin: TFrnLogin;

implementation

{$R *.dfm}

procedure TFrnLogin.btn_loginClick(Sender: TObject);
begin
  efetuarLogin;
end;

procedure TFrnLogin.efetuarLogin;
begin
  if (edt_usuario.Text='') then
  begin
    edt_usuario.SetFocus;
    ShowMessage('Usuário Vazio!');
  end
  else if (edt_senha.Text='') then
  begin
    edt_senha.SetFocus;
    edt_senha.Clear;
    ShowMessage('Senha Vazia!');
  end
  else
  begin
    Application.CreateForm(FormPrincipal, FormPrincipal);
  end;

end;

end.
